<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/congrat_holder"
            android:layout_width="303dp"
            android:layout_height="259dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.273" >

            <TextView
                android:id="@+id/congrat_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:fontFamily="@font/audiowide"
                android:text="\nCONGRATULATIONS!!\n\nYOU WON 52,97200774 BTC!!\n\n1.000.000$"
                android:textAlignment="center"
                android:textColor="#64DD17"
                android:textSize="24sp" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/leave_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:backgroundTint="#000000"
            android:fontFamily="@font/audiowide"
            android:text="LET ME LEAVE!\nI WANT TO SPEND MY MONEY!!"
            android:textColor="#64DD17"
            app:cornerRadius="30dp"
            app:layout_constraintEnd_toEndOf="@+id/congrat_holder"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+id/congrat_holder"
            app:layout_constraintTop_toBottomOf="@+id/congrat_holder" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>